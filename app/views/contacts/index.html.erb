<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Address</th>
      <th>Business phone</th>
      <th>Country</th>
      <th>Mobile phone</th>
      <th>Email</th>
      <th>Primary</th>
      <th>Fax number</th>
      <th>Billing</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.last_name %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.address %></td>
        <td><%= contact.business_phone %></td>
        <td><%= contact.country %></td>
        <td><%= contact.mobile_phone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.primary %></td>
        <td><%= contact.fax_number %></td>
        <td><%= contact.billing %></td>
        <td><%= contact.customer %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

